mixin navbar(active)
	.navbar.navbar-fixed-top
		.container
			.navbar-header
				a.navbar-brand(href="/") gitorial
			.navbar-inner
				a(class="brand", href="/")
					img(src="/images/gitorial_book.png")
				ul.nav.navbar-nav
					li(class=(active=="about")?"active":"")
						a(href="/about/") about
					li(class=(active=="contact")?"active":"")
						a(href="/contact/") contact
					if (user)
						li(class=(active=="tutorial")?"active":"")
							a(href="/tutorial/") tutorial