extends base

block nav
	if (user)
		+navbar("home")

block head
	if (user)
		title= 'gitorial | ' + user.username.toLowerCase() + '\'s profile'
		link(rel="stylesheet" type="text/css" href="/css/main.css")
	else
		link(rel="stylesheet", type="text/css", href="/css/landing.css")
		title gitorial | yolo

block body

	if (user)
		link(rel="stylesheet" type="text/css" href="/css/home.css")


		div.container
			div.tutorials-header.pull-left
				//a(class="btn btn-default pull-left new" href="#" id="new") New
				h2(class="text-center"): small= 'make a new gitorial'
				form(class="navbar-form center")
					div.form-group
						input(type="text" class="form-control" id="repo" placeholder="github repo")
					button(type="button" class="btn btn-default" onClick="window.location.href='edit/'+$('#repo').val()") New

				h2(class="text-center" style="padding-top: 40px;"): small= user.displayName.toLowerCase() + '\'s tutorials'
				if (tutorials)
					table.table
						for tut in tutorials
							tr: td: a(href=tut.url)= tut.title
				else
					p(class="text-center") you don't have any tutorials :(

	else
		
		<img src="images/landing_logo.png" style="padding-top: 7px;">
		<img id="whiteOne" src="images/white.svg">
		<img id="top" src="images/landing_branch_top.svg" style="position: absolute; left: 170px; top: 55px; z-index: 5">
		<img id="whiteTwo" src="images/white.svg">
		<img id="middle" src="images/landing_branch_middle.svg" style="position: absolute; left: 248px; top: 71px;z-index: 3">
		<img id="whiteThree" src="images/white.svg">
		<img id="bottom" src="images/landing_branch_bottom.svg" style="position: absolute; left: 349px; top: 89px; z-index: 1">
		<img id="tagline2" src="images/landing_numbers.svg" style="position: absolute; left: 464px; top: 41px; z-index: 0">
		<div id="tagline">code create teach
		</div>
		<div id="github"><a href="/auth/github"><img class="gitty" src="/images/github_mark.png">sign in with github</a></div>
		//- <div id="desc">● make tutorials using github repos.<br>● build each step with a new commit.<br>● add details and instructions. <br>● share with friends. <br>● yolo, idk. "swag"</div>
block script
