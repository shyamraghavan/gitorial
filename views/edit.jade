block nav
  .navbar.navbar-static-top
    .container
      .navbar-header
        a(class="brand", href="/")
          img(src="/images/gitorial_svg.svg")
      .navbar-collapse.collapse
        ul.nav.navbar-nav
          li: a#save-button(title="Save")
            span.glyphicon.glyphicon-floppy-disk
            span#save-status  Save
          li: a#compile-button(title="Compile")
            span.glyphicon.glyphicon-refresh
            span#save-status  Compile
          li: a#discard-button(href="/", title="Discard")
            span.glyphicon.glyphicon-trash
            span#save-status  Discard
        if (user)
          ul.nav.navbar-nav.navbar-right
            li#me.dropdown: a.dropdown-toggle(data-toggle="dropdown")
              img.avatar(src=user._json.avatar_url)
              | &nbsp;&nbsp;Me
              b.caret
              ul.dropdown-menu
                li: a(href="/")
                  |  My Tutorials
                li: a(href="/edit")
                  |  New
                li.divider
                li: a(href="/logout")
                  |  Logout

block body
  #gitorial-edit(data-profileUrl=user.profileUrl, data-repo=repo)
    .tabbable.tabs-left
      ul.nav.nav-tabs
        li: a(href="#info", data-toggle="tab") Info
        //- - each step, i in steps
        //-     li: a(href="#" + i, data-toggle="tab")= 'Step ' + i + '.'
        li.active: a.step(href="#1", data-toggle="tab", data-index="1") Step 1.
        li: a.step(href="#2", data-toggle="tab", data-index="2") Step 2.
        li: a.step(href="#3", data-toggle="tab", data-index="3") Step 3.
        li: a.step(href="#4", data-toggle="tab", data-index="4") Step 4.
        li: a.step(href="#5", data-toggle="tab", data-index="5") Step 5.
      .tab-content
        .tab-pane#info
          .tab-pane-inner
            .editor.col-md-6
              p Test
            .preview.col-md-6
         each step, i in steps
           .tab-pane.active(id=i)
             .tab-pane-inner
               .editor.col-md-6= step
               .preview.col-md-6
                 br
                 h1.text-center Click &ldquo;
                   span.glyphicon.glyphicon-refresh
                   |  Compile&rdquo; to see your notes!
